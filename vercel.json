{
  "version": 2,
  "builds": [
    {
      "src": "src/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://cashpot-backend.onrender.com/api/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "https://cashpot-backend.onrender.com/uploads/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://cashpot-backend.onrender.com"
  }
}

