{
  "version": 2,
  "buildCommand": "cd src && npm install && npm run build",
  "outputDirectory": "src/dist",
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "src/dist" } }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://cashpot-backend.onrender.com/api/$1" },
    { "source": "/uploads/(.*)", "destination": "https://cashpot-backend.onrender.com/uploads/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://cashpot-backend.onrender.com"
  }
}










