{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "src/dist" } }
  ],
  "rewrites": [
    { "source": "/api/:match*", "destination": "https://cashpot-backend.onrender.com/api/:match*" },
    { "source": "/uploads/:match*", "destination": "https://cashpot-backend.onrender.com/uploads/:match*" },
    { "source": "/((?!assets/|.*\\.(js|css|map|png|jpg|jpeg|gif|svg|ico|txt|json)).*)", "destination": "/index.html" }
  ],
  "env": {
    "VITE_API_URL": "https://cashpot-backend.onrender.com"
  }
}
